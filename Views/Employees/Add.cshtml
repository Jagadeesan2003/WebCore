@model WebCore.Models.AddEmployeeViewModel
@{
}

<h1>Add Employee </h1>
<form class="row g-3 mt-5" method="post" action="Add">
    <div class="col-md-6">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="col-md-6">
        <label for="" class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="col-md-6">
        <label for="" class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="Salary">
    </div>
    <div class="col-md-6">
        <label for="" class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" asp-for="DOB">
    </div>
    <div class="col-md-6">
        <label for="" class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="Department">
    </div>
    <div class="col-12 mt-5">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>